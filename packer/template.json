{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
    "aws_secret_key": "{{env `AWS_SECRET_KEY`}}",
    "name": "proxxy",
    "instance_type": "m3.xlarge"
  },
  "builders": [{
    "name": "proxxy-us-east-1",
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "ami_name": "{{user `name`}} us-east-1 {{timestamp}}",
    "region": "us-east-1",
    "source_ami": "ami-b227efda",
    "instance_type": "{{user `instance_type`}}",
    "ssh_username": "ubuntu"
  },{
    "name": "proxxy-us-west-2",
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "ami_name": "{{user `name`}} us-west-2 {{timestamp}}",
    "region": "us-west-2",
    "source_ami": "ami-8386feb3",
    "instance_type": "{{user `instance_type`}}",
    "ssh_username": "ubuntu"
  }],
  "provisioners": [
    {
      "type": "shell",
      "inline": "mkdir /tmp/packer"
    },
    {
      "type": "file",
      "source": "upstart.conf",
      "destination": "/tmp/packer/upstart.conf"
    },
    {
      "type": "file",
      "source": "diamond.conf",
      "destination": "/tmp/packer/diamond.conf"
    },
    {
      "type": "file",
      "source": "../app",
      "destination": "/tmp/packer/app"
    },
    {
      "type": "shell",
      "inline": "mv /tmp/packer /opt/packer",
      "execute_command": "{{ .Vars }} sudo -E bash '{{ .Path }}'"
    },
    {
      "type": "shell",
      "scripts": [
        "docker.sh",
        "diamond.sh",
        "proxxy.sh"
      ],
      "execute_command": "{{ .Vars }} sudo -E bash '{{ .Path }}'"
    }
  ]
}
