{
  "variables": {
    "s3_prefix": "{{env `S3_PREFIX`}}",
    "aws_account_id": "{{env `AWS_ACCOUNT_ID`}}",
    "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
    "aws_secret_key": "{{env `AWS_SECRET_KEY`}}",
    "x509_cert_path": "{{env `EC2_CERT`}}",
    "x509_key_path": "{{env `EC2_PRIVATE_KEY`}}",
    "instance_type": "m3.xlarge"
  },
  "builders": [{
    "name": "proxxy-use1",
    "type": "amazon-instance",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "account_id": "{{user `aws_account_id`}}",
    "ami_name": "proxxy use1 {{timestamp}}",
    "region": "us-east-1",
    "source_ami": "ami-a08073c8",
    "instance_type": "{{user `instance_type`}}",
    "ami_virtualization_type": "hvm",
    "ami_block_device_mappings": [],
    "ssh_username": "ubuntu",
    "s3_bucket": "{{user `s3_prefix`}}-use1/proxxy",
    "x509_cert_path": "{{user `x509_cert_path`}}",
    "x509_key_path": "{{user `x509_key_path`}}"
  },{
    "name": "proxxy-usw2",
    "type": "amazon-instance",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "account_id": "{{user `aws_account_id`}}",
    "ami_name": "proxxy usw2 {{timestamp}}",
    "region": "us-west-2",
    "source_ami": "ami-47423077",
    "instance_type": "{{user `instance_type`}}",
    "ami_virtualization_type": "hvm",
    "ami_block_device_mappings": [],
    "ssh_username": "ubuntu",
    "s3_bucket": "{{user `s3_prefix`}}-usw2/proxxy",
    "x509_cert_path": "{{user `x509_cert_path`}}",
    "x509_key_path": "{{user `x509_key_path`}}"
  }],
  "provisioners": [
    {
      "type": "shell",
      "inline": "mkdir /tmp/packer"
    },
    {
      "type": "file",
      "source": "menu.lst",
      "destination": "/tmp/packer/menu.lst"
    },
    {
      "type": "file",
      "source": "upstart.conf",
      "destination": "/tmp/packer/upstart.conf"
    },
    {
      "type": "file",
      "source": "diamond.conf",
      "destination": "/tmp/packer/diamond.conf"
    },
    {
      "type": "file",
      "source": "../app",
      "destination": "/tmp/packer/app"
    },
    {
      "type": "shell",
      "inline": "mv /tmp/packer /opt/packer",
      "execute_command": "{{ .Vars }} sudo -E bash '{{ .Path }}'"
    },
    {
      "type": "shell",
      "scripts": [
        "amitools.sh",
        "docker.sh",
        "diamond.sh",
        "proxxy.sh"
      ],
      "execute_command": "{{ .Vars }} sudo -E bash '{{ .Path }}'"
    }
  ]
}
